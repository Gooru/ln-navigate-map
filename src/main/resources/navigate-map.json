{
  "comment": "This is bundled JSON file. Idea is that we should externalize this also as part of build. Currently this is going to hold the dev env information",
  "datasources": {
    "defaultDataSource": {
      "nucleus.ds.type": "hikari",
      "username": "nucleus",
      "password": "nucleus",
      "autoCommit": true,
      "jdbcUrl": "jdbc:postgresql://localhost:5432/nucleus",
      "maximumPoolSize": 5
    },
    "analyticsDataSource": {
      "nucleus.ds.type": "hikari",
      "username": "nucleus",
      "password": "nucleus",
      "autoCommit": false,
      "jdbcUrl": "jdbc:postgresql://localhost:5432/nucleus",
      "maximumPoolSize": 5
    }
  },
  "verticles": {
    "org.gooru.navigatemap.bootstrap.verticles.AuthVerticle": {
      "instances": 1,
      "worker": false,
      "config": {
        "redisConfig": {
          "host": "localhost",
          "port": 6379,
          "encoding": "UTF-8",
          "tcpKeepAlive": true,
          "tcpNoDelay": true
        },
        "sessionTimeoutInSeconds": 3600
      }
    },
    "org.gooru.navigatemap.bootstrap.verticles.NavigationVerticle": {
      "instances": 1,
      "worker": false,
      "config": {
        "collection.fetch.uri": "http://nile-dev.gooru.org/api/nucleus/v2/collections/",
        "assessment.fetch.uri": "http://nile-dev.gooru.org/api/nucleus/v2/assessments/",
        "resource.fetch.uri": "http://nile-dev.gooru.org/api/nucleus/v2/resources/",
        "http.timeout": 60000,
        "http.poolSize": 20
      }
    },
    "org.gooru.navigatemap.bootstrap.verticles.UserContextVerticle": {
      "instances": 1,
      "worker": false,
      "config": {
        "redisConfig": {
          "host": "localhost",
          "port": 6379,
          "encoding": "UTF-8",
          "tcpKeepAlive": true,
          "tcpNoDelay": true
        }
      }
    },
    "org.gooru.navigatemap.bootstrap.verticles.HttpVerticle": {
      "instances": 1,
      "worker": false,
      "config": {
        "http.port": 8080,
        "metrics.periodicity.seconds": 300,
        "event.bus.send.timeout.seconds": 60,
        "request.body.size.max.mb": 5
      }
    }
  },
  "app.configuration": {
    "context.mbus.timeout.seconds": 60,
    "suggestions.advise": true,
    "serve.content.details": false,
    "suggestions.limit": 1
  },
  "vertxOptions": {
    "workerPoolSize": 40,
    "metricsOptions": {
      "enabled": true
    },
    "clustered": true
  },
  "systemProperties": {
    "vertx.logger-delegate-factory-class-name": "io.vertx.core.logging.SLF4JLogDelegateFactory",
    "vertx.metrics.options.enabled": "true",
    "logback.configurationFile": "src/main/resources/logback-navigate-map.xml"
  }
}
